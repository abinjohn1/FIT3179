{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 650,
  "height": 550,
  "title": "Life Expectancy around the world (1550-2019)",
  "data": {
    "url": "https://raw.githubusercontent.com/abinjohn1/FIT3179/main/Vega_lite/Homework9/Data/life-expectancy.csv"
  },
  "params": [
    {
      "name": "Year_Above",
      "value": 1550,
      "bind": {
        "input": "range",
        "min": 1550,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year>=Year_Above"},
    {
      "filter": "datum.Entity=='Japan'||datum.Entity=='Australia'||datum.Entity=='United Kingdom'||datum.Entity=='United States of America'||datum.Entity=='India'||datum.Entity=='Ethiopia'"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "axis": {"tickCount": 5, "grid": false}
    },
    "y": {
      "field": "Life_expectancy",
      "type": "quantitative",
      "scale": {"domain": [20, 90]},
      "axis": {"tickCount": 5}
    }
  },
  "layer": [
    {
      "selection": {
        "country_highlight": {
          "type": "multi",
          "fields": ["Entity"],
          "on":"mouseover"
        }
      },
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "axis": {"tickCount": 7}
        },
        "y": {
          "field": "Life_expectancy","title": "Life Expectancy",
          "type": "quantitative",
          "axis": {"tickCount": 5}
        },
        "color": {
          "field": "Entity",
          "type": "nominal",
          "scale": {
            "domain": [
              "Japan",
              "Australia",
              "United Kingdom",
              "United States of America",
              "India",
              "Ethiopia"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "country_highlight", "value": 0.7},
          "value": 0.1
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal"},
          {"field": "Year", "type": "quantitative", "format": ","},
          {
            "field": "Life_expectancy",
            "type": "quantitative",
            "format": ".2",
            "title": "Life Expectancy"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 4,
        "fontSize": 8,
        "fontStyle": "sanserif"
      },
      "encoding": {
        "text": {"field": "Code", "type": "nominal"},
        "color": {"value": "grey"},
        "opacity": {
          "condition": {"test": " datum['Year'] == '2019'", "value": 1},
          "value": 0
        }
      }
    }
  ],
  "config": {"legend": {"disable": true}}
}
