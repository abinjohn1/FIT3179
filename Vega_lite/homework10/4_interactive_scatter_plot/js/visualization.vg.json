{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 500,
  "height": 400,
  "title": {
    "text": "Life Expectancy around the world (1900-2019)",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {"name": "country_highlight_store"},
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/abinjohn1/FIT3179/main/Vega_lite/Homework9/Data/life-expectancy.csv",
      "format": {"type": "csv", "parse": {"Year": "number"}, "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "datum.Year>=Year_Above"},
        {
          "type": "filter",
          "expr": "datum.Entity=='Japan'||datum.Entity=='Australia'||datum.Entity=='United Kingdom'||datum.Entity=='United States of America'||datum.Entity=='India'||datum.Entity=='Ethiopia'"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "country_highlight_Entity_legend",
      "value": null,
      "on": [
        {
          "events": [
            {
              "source": "view",
              "type": "click",
              "markname": "Entity_legend_symbols"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Entity_legend_labels"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Entity_legend_entries"
            }
          ],
          "update": "datum.value || item().items[0].items[0].datum.value",
          "force": true
        },
        {
          "events": [{"source": "view", "type": "click"}],
          "update": "!event.item || !datum ? null : country_highlight_Entity_legend",
          "force": true
        }
      ]
    },
    {
      "name": "country_highlight",
      "update": "vlSelectionResolve(\"country_highlight_store\", \"union\", true)"
    },
    {
      "name": "Year_Above",
      "value": 1900,
      "bind": {
        "input": "range",
        "min": 1899,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "country_highlight_tuple",
      "update": "country_highlight_Entity_legend !== null ? {fields: country_highlight_tuple_fields, values: [country_highlight_Entity_legend]} : null"
    },
    {
      "name": "country_highlight_tuple_fields",
      "value": [{"type": "E", "field": "Entity"}]
    },
    {
      "name": "country_highlight_toggle",
      "value": false,
      "on": [
        {
          "events": {"merge": [{"source": "view", "type": "click"}]},
          "update": "event.shiftKey"
        }
      ]
    },
    {
      "name": "country_highlight_modify",
      "on": [
        {
          "events": {"signal": "country_highlight_tuple"},
          "update": "modify(\"country_highlight_store\", country_highlight_toggle ? null : country_highlight_tuple, country_highlight_toggle ? null : true, country_highlight_toggle ? country_highlight_tuple : null)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_main",
          "data": "source_0",
          "groupby": ["Entity"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "datum[\"Year\"]"},
          "interactive": true,
          "from": {"data": "faceted_path_layer_0_main"},
          "encode": {
            "update": {
              "stroke": {"scale": "color", "field": "Entity"},
              "opacity": [
                {
                  "test": "!(length(data(\"country_highlight_store\"))) || (vlSelectionTest(\"country_highlight_store\", datum))",
                  "value": 0.6
                },
                {"value": 0.2}
              ],
              "tooltip": {
                "signal": "{\"Entity\": isValid(datum[\"Entity\"]) ? datum[\"Entity\"] : \"\"+datum[\"Entity\"], \"Year\": format(datum[\"Year\"], \",\"), \"Life Expectancy\": format(datum[\"Life_expectancy\"], \",\")}"
              },
              "description": {
                "signal": "\"Year: \" + (format(datum[\"Year\"], \"\")) + \"; Life_expectancy: \" + (format(datum[\"Life_expectancy\"], \"\")) + \"; Entity: \" + (isValid(datum[\"Entity\"]) ? datum[\"Entity\"] : \"\"+datum[\"Entity\"]) + \"; Life Expectancy: \" + (format(datum[\"Life_expectancy\"], \",\"))"
              },
              "x": {"scale": "x", "field": "Year"},
              "y": {"scale": "y", "field": "Life_expectancy"},
              "defined": {
                "signal": "isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"]) && isValid(datum[\"Life_expectancy\"]) && isFinite(+datum[\"Life_expectancy\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "dx": {"value": -25},
          "fontSize": {"value": 11.5},
          "fontStyle": {"value": ""},
          "fill": {"value": "#e41a1c"},
          "opacity": [
            {"test": " datum['Entity'] == 'Japan'", "value": 1},
            {"value": 0}
          ],
          "description": {
            "signal": "\"Entity: \" + (isValid(datum[\"Entity\"]) ? datum[\"Entity\"] : \"\"+datum[\"Entity\"])"
          },
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "text": {
            "signal": "isValid(datum[\"Entity\"]) ? datum[\"Entity\"] : \"\"+datum[\"Entity\"]"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "source_0", "field": "Year"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "Life_expectancy"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Japan",
        "Australia",
        "United Kingdom",
        "United States of America",
        "India",
        "Ethiopia"
      ],
      "range": [
        "#e41a1c",
        "#984ea3",
        "#ff7f00",
        "#a6cee3",
        "#377eb8",
        "#a65628"
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "tickCount": 7,
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "tickCount": 7,
      "gridScale": "x",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year",
      "tickCount": 7,
      "labelFlush": true,
      "labelOverlap": true,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Life_expectancy",
      "tickCount": 7,
      "labelOverlap": true,
      "zindex": 0
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "symbolType": "stroke",
      "title": "Entity",
      "encode": {
        "labels": {
          "name": "Entity_legend_labels",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"country_highlight_store\")) || (country_highlight[\"Entity\"] && indexof(country_highlight[\"Entity\"], datum.value) >= 0))",
                "value": 1
              },
              {"value": 0.35}
            ]
          }
        },
        "symbols": {
          "name": "Entity_legend_symbols",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"country_highlight_store\")) || (country_highlight[\"Entity\"] && indexof(country_highlight[\"Entity\"], datum.value) >= 0))",
                "value": 0.6
              },
              {"value": 0.35}
            ]
          }
        },
        "entries": {
          "name": "Entity_legend_entries",
          "interactive": true,
          "update": {"fill": {"value": "transparent"}}
        }
      }
    }
  ],
  "config": {
    "projection": {"type": "equalEarth"},
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 800,
    "height": 500,
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/abinjohn1/FIT3179/main/Vega_lite/Homework9/Js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/abinjohn1/FIT3179/main/Vega_lite/Homework9/Data/life-expectancy.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {
            "field": "life expectancy",
            "type": "quantitative",
            "scale": {"domain": [15, 90]}
          },
          "color": {
            "field": "depth",
            "type": "quantitative",
            "scale": {"scheme": "reds"}
          }
        }
      }
    ],
