{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 600,
  "height": 500,
  "title": "Life Expectancy Vs Health Expenditure Per Capita",
  "data": {
    "url": "https://raw.githubusercontent.com/abinjohn1/FIT3179/main/Vega_lite/scatterplot/data/life-expectancy-vs-healthcare-expenditure.csv"
  },
  "transform": [
    {"filter": "datum.Life_expectancy>20"},
    {"filter": "datum.Health_Exp_per_capita!=''"}
  ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Life_expectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "scale": {"domain": [40, 90]},
      "axis": {"tickCount": 5}
    },
    "y": {
      "field": "Health_Exp_per_capita",
      "type": "quantitative",
      "title": "Health Expenditure Per Capita ($M)",
      "scale": {"type": "log"},
      "axis": {"tickCount": 3, "grid": false}
    },
    "color": {
      "condition": {
        "test": "datum.Entity=='Japan'||datum.Entity=='Australia'||datum.Entity=='United Kingdom'||datum.Entity=='United States'||datum.Entity=='India'||datum.Entity=='Switzerland'||datum.Entity=='Ethiopia'",
        "value": "red"
      },
      "value": "lightgrey"
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal"},
      {
        "field": "Health_Exp_per_capita",
        "type": "quantitative",
        "format": ".5",
        "title": "Health Expenditure per Capita($m)"
      },
      {
        "field": "Life_expectancy",
        "type": "quantitative",
        "format": ".2",
        "title": "Life Expectancy"
      }
    ]
  }
}
